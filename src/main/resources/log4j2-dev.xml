<?xml version="1.0" encoding="utf-8"?>
<configuration status="WARN" monitorInterval="30" >
    <properties>
        <!-- 文件输出格式 -->
        <property name="PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} |-%-5level [%thread] %c [%L] -| %msg%n</property>
        
        <Property name="logPath" >D:\testlog</Property>
    </properties>

    <appenders>
        <Console name="CONSOLE" target="system_out">
            <PatternLayout pattern="${PATTERN}" />
        </Console>
        
        
<!--         <File name="File" fileName="D:\logs.log">  
            <PatternLayout pattern="${PATTERN}" />
        </File> -->
        
<!--         这个会打印出所有的信息，每次大小超过size，则这size大小的日志会自动存入按年份-月份建立的文件夹下面并进行压缩，作为存档 -->
        <RollingFile name="RollingFile" fileName="${logPath}/rollingFileLogs.log"
                     filePattern="logs/$${date:yyyy-MM}/web-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd 'at' HH:mm:ss z} %-5level %class{36} %L %M - %msg%xEx%n"/>
            <SizeBasedTriggeringPolicy size="2MB"/>
        </RollingFile>
        <RollingRandomAccessFile name="RollingRandomAccessFile1" fileName="${logPath}/rollingRandomAccessFilelog1.log" 
        filePattern="${logPath}/all.log.%d{yyyy-MM-dd}" immediateFlush="true">
                <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <PatternLayout pattern="%d %-5p [%t] %m (%c:%F:%L) %n" />
        </RollingRandomAccessFile>
        <File name="SpringBoot-File-Appender" fileName="${logPath}/springboot_log.log" >
            <PatternLayout>
                <pattern>
                    %d{yyyy-MM-dd HH:mm:ss.SSS} |-%-5level [%thread] %c [%L] -| %msg%n
                </pattern>
            </PatternLayout>
        </File>
        <RollingRandomAccessFile name="RollingRandomAccessFile2" fileName="${logPath}/rollingRandomAccessFilelog2.log" 
        filePattern="${logPath}/$${date:yyyy-MM}/rollingRandomAccessFilelog2-%d{yyyy-MM-dd HH-mm}-%i.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy max="20"/>
        </RollingRandomAccessFile>

        <Async name="AsyncAppender">
            <AppenderRef ref="RollingRandomAccessFile2"/>
        </Async>
    </appenders>
    
    <loggers>
        <Logger name="org.springframework" level="info" additivity="false">
            <AppenderRef ref="SpringBoot-File-Appender"/>
<!--             <AppenderRef ref="CONSOLE"/> -->
            <AppenderRef ref="RollingRandomAccessFile1" />
            <AppenderRef ref="RollingRandomAccessFile2" />
        </Logger>
        <logger name="com.yemh.xqsrd"  level="info" />
        <Root level="info">
            <appenderref ref="CONSOLE" />
            <appenderref ref="RollingFile" />
        </Root>
    </loggers>

</configuration>